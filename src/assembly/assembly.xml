<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">

    <!-- ID of the assembly -->
    <id>eclipse-http-post</id>

    <!-- Format of the final archive: zip -->
    <formats>
        <format>zip</format>
    </formats>

    <!-- Directory structure for the archive -->
    <includeBaseDirectory>true</includeBaseDirectory>

    <!-- Include all project files, including source, configuration, and dependencies -->
    <fileSets>

        <!-- Include all source code and resources -->
        <fileSet>
            <directory>${basedir}</directory>
            <includes>
                <include>src/**</include>
                <include>pom.xml</include>
                <include>.project</include>
                <include>.classpath</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>

        <!-- Include compiled JAR -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <includes>
                <include>${project.build.finalName}.jar</include>
            </includes>
            <outputDirectory>/target</outputDirectory>
        </fileSet>

        <!-- Include all dependencies -->
        <fileSet>
            <directory>${project.build.directory}/libs</directory>
            <outputDirectory>/libs</outputDirectory>
        </fileSet>

    </fileSets>
</assembly>
